@model IEnumerable<Lobasoft_Erp.Models.SP_OrdenesPorUsuario>

@{
    ViewData["Title"] = "ObtenerOrdenesPorCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Ordenes Realizadas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new {  id=item.Id }, new { @class="btn btn-success" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new { @class="btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
