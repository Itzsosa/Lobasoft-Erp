@model Lobasoft_Erp.Models.Contactar

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ContactarProveedor</title>
</head>
<body>

    <div class="row">
        <div class="col-12">
            <form asp-action="Contactar" method="post">
                <h4 class="text-center">Contactar proveedor</h4>
                <div class="form-group col-12">
                    <label asp-for="Asunto" class="form-label">Asunto</label>
                    <input type="email" asp-for="Asunto" class="form-control" />
                    <span asp-validation-for="Asunto" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                    <button type="button" class="btn btn-danger" id="btnCancelar" data-bs-dismiss="modal">Cancelar</button>

                </div>
            </form>
        </div>
    </div>

</body>
</html>
